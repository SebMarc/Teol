{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('asset/css/admin.css') }}">
{% endblock %}

{% block body %}

<div class="user-form">

    <h3 class="text-white  text-center">Contactez nous !</h3>
        
        {{ form_start(contactForm) }}
        <div class="modal-body">
        <div> {{ form_row(contactForm.name) }} </div> 
        <div> {{ form_row(contactForm.email) }} </div>
        <div> {{ form_row(contactForm.phone) }} </div>
        <div> {{ form_row(contactForm.message) }} </div>
    
        <button class="btn btn-warning text-center">Envoyer</button>
        </div>
        {{ form_end(contactForm) }}
        
</div>

{% endblock %}